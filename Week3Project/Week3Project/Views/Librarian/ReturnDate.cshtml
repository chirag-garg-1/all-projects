@model Week3Project.Models.ReturnDateModel

@{
    Layout = null;
}

<h2>Return Date</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@using (Html.BeginForm("ReturnDate", "YourControllerName", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.ReturnDate, "Return Date:")
        @Html.TextBoxFor(model => model.ReturnDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ReturnDate)
    </div>

    <!-- Add more fields as needed -->

    <div class="form-group">
        <input type="submit" value="Add Return Date" class="btn btn-primary" />
    </div>
}
