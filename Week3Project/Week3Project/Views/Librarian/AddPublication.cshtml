@model Week3Project.Models.PublicationModel

@{
    Layout = null;
}

<h2>Add Publication</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@using (Html.BeginForm("AddPublication", "YourControllerName", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.PublicationId, "Publication ID:")
        @Html.TextBoxFor(model => model.PublicationId, new { @class = "form-control", id = "PublicationId" })
        @Html.ValidationMessageFor(model => model.PublicationId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Title, "Title:")
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", id = "Title" })
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Author, "Author:")
        @Html.TextBoxFor(model => model.Author, new { @class = "form-control", id = "Author" })
        @Html.ValidationMessageFor(model => model.Author)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Year, "Publication Date:")
        @Html.TextBoxFor(model => model.Year, "{0:yyyy-MM-dd}", new { @class = "form-control", id = "PublicationDate" })
        @Html.ValidationMessageFor(model => model.Year)
    </div>

    <div class="form-group">
        <input type="submit" value="Add Publication" class="btn btn-primary" />
    </div>
}
