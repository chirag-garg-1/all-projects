@model LibraryManagementSystem.Models.Librarian
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Library Management System</title>
</head>
<body>
    <h2>
        Staff Login
        <br />
    </h2>
    @using (Html.BeginForm("Login", "Librarian", FormMethod.Post))
    {
        <div>
            @Html.LabelFor(m => m.Username, "Enter the Username")
            @Html.TextBoxFor(m => m.Username)
        </div>
        <br />
        <div>
            @Html.LabelFor(m => m.Password, "Enter the Password ")
            @Html.TextBoxFor(m => m.Password)
        </div>
        <br />
        <div>
            <button type="submit" class="btn">Login</button>
            <a href='@Url.Action("Index","Home")'>
                <input type='button' value='Main Menu' />
            </a>
        </div>
    }

    @if (TempData["Message"] != null)
    {
        <div>
            <h3>Result:</h3>
            <p>@TempData["Message"]</p>
        </div>
    }
    @*<a href='@Url.Action("Dashboard","Librarian")'>
            <input type='button' value='Login' />
        </a>*@

</body>
</html>


