@model LibraryManagementSystem.Models.StudentModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Library Management System</title>
</head>
<body>
    <h2>Student Registration</h2>

    @using (Html.BeginForm("RegisterStudent", "Librarian", FormMethod.Post))
    {
        <div>
            @Html.LabelFor(m => m.Id, "Assign the Id for the Student")
            @Html.TextBoxFor(m => m.Id)


        </div>
        <br />
        <div>
            @Html.LabelFor(m => m.Name, "Name of the Student")
            @Html.TextBoxFor(m => m.Name)

        </div>
        <br />
        <div>
            @Html.LabelFor(m => m.Username, "Assign the UserName for the Student")
            @Html.TextBoxFor(m => m.Username)

        </div>
        <br />
        <div>
            @Html.LabelFor(m => m.Password, "Assign the Password for the Student")
            @Html.TextBoxFor(m => m.Password)
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Register Student" class="btn btn-default" />
                <a href='@Url.Action("Dashboard","Librarian")'>
                    <input type='button' value='Go To Dashboard' />
                </a>
                <a href='@Url.Action("Index","Home")'>
                    <input type='button' value='Main Menu' />
                </a>
            </div>
        </div>
    }
    @if (TempData["Message"] != null)
    {
        <p class="text-success">@TempData["Message"]</p>
    }
    <br />
</body>
</html>

